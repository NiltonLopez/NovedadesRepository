
<div class="row d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-8 mt-4 py-5">
        <form asp-controller="home" asp-action="Entrar">
            <div><h1 class="fs-5 fw-bold text-center mb-3">Iniciar sesión</h1></div>
            <div class="mb-3 row justify-conten t-center">
                <label for="inputUsuario" class="col-lg-2 col-sm-4 col-form-label">Usuario</label>
                <div class="col-lg-10 col-sm-8">
                    <input name="usuario" type="text" class="form-control" id="inputUsuario" required>
                </div>
            </div>
            <div class="mb-3 row justify-content-center">
                <label for="inputContraseña" class="col-lg-2 col-sm-4 col-form-label">Contraseña</label>
                <div class="col-lg-10 col-sm-8">
                    <input name="contrasena" type="password" class="form-control" id="inputContraseña" required>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            <div class="d-flex justify-content-end"><button class="btn bg-v text-white fw-bold" type="submit">Confirmar</button></div>
            
        </form>
    </div>
</div>